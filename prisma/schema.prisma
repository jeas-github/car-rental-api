generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Car {
  id          String  @id @default(uuid())
  plate       String  @unique
  brand       String
  model       String
  year        Int
  daily_price Decimal @db.Decimal(10, 2)

  @@map("cars")
}

model Customer {
  id            String @id @default(uuid())
  name          String
  email         String @unique
  password_hash String
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  @@map("customers")
}

model RentalLocation {
  id      String @id @default(uuid())
  name    String @unique
  @@map("rental_locations")
}
